{
	"version": "0.0.10",
	"name": "@mr/dataloader",
	"exports": {
		".": "./mod.ts",
		"./cache": "./cache/mod.ts"
	},
	"tasks": {
		"build": "deno run -A scripts/build.ts"
	},
	"imports": {
		"@deno/dnt": "jsr:@deno/dnt@^0.41.1",
		"@std/assert": "jsr:@std/assert@^0.221.0",
		"object-identity": "jsr:@mr/object-identity@^0.1.2"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-var",
				"prefer-const",
				"no-cond-assign",
				"no-inner-declarations",
				"no-explicit-any",
				"require-await"
			]
		}
	},
	"fmt": {
		"lineWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"exclude": [
		"npm"
	]
}
